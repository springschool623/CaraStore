@model CaraLuggage.Models.KhachHang

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LoginRegisterView.cshtml";
}

@using (Html.BeginForm("RegisterSection", "LoginRegister", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="login_box">
        <div class="login-header">
            <span>Đăng ký</span>
        </div>
        <div class="input_box">
            @Html.EditorFor(model => model.TaiKhoan.account_name, new { htmlAttributes = new { @class = "input-field" } })
            <label for="user" class="label">Tên đăng nhập</label>
            <i class="fa-solid fa-user"></i>
        </div>
        <div class="input_box">
            @Html.EditorFor(model => model.customer_name, new { htmlAttributes = new { @class = "input-field" } })
            <label for="user" class="label">Họ và tên</label>
            <i class="fa-solid fa-user"></i>
        </div>
        <div class="input_box">
            @Html.EditorFor(model => model.TaiKhoan.account_password, new { htmlAttributes = new { @class = "input-field" } })
            <label for="pass" class="label">Mật khẩu</label>
            <i class="fa-solid fa-lock"></i>
        </div>
        <div class="input_box">
            @Html.EditorFor(model => model.customer_address, new { htmlAttributes = new { @class = "input-field" } })
            <label for="pass" class="label">Địa chỉ</label>
            <i class="fa-solid fa-address-book"></i>
        </div>
        <div class="input_box">
            @Html.EditorFor(model => model.customer_phone, new { htmlAttributes = new { @class = "input-field" } })
            <label for="pass" class="label">Số điện thoại</label>
            <i class="fa-solid fa-phone"></i>
        </div>
        <div class="input_box">
            <input type="submit" class="input-submit" value="Đăng ký">
        </div>
        <div class="register">
            <span>Bạn đã có tài khoản? <a href="@Url.Action("LoginSection", "LoginRegister")">Đăng nhập</a></span>
        </div>
    </div>
}