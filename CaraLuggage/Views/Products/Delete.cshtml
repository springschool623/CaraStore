@model CaraLuggage.Models.SanPham

@{
    ViewBag.Title = "Quản lý sản phẩm (Admin)";
    Layout = "~/Views/Shared/AdminView.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Xóa sản phẩm?</h4>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.product_id)

                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-5 pr-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_name, "Tên sản phẩm")
                                    @Html.EditorFor(model => model.product_name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.product_name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3 px-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_category, "Loại sản phẩm")
                                    @Html.EditorFor(model => model.product_category, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.product_category, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_brand, "Thương hiệu")
                                    @Html.EditorFor(model => model.product_brand, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.product_brand, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 pr-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_size, "Kích thước")
                                    @Html.EditorFor(model => model.product_size, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.product_size, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-5 pl-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_material, "Chất liệu")
                                    @Html.EditorFor(model => model.product_material, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.product_material, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4 pl-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_color, "Màu sắc")
                                    @Html.EditorFor(model => model.product_color, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.product_color, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 pr-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_origin, "Xuất xứ")
                                    @Html.EditorFor(model => model.product_origin, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.product_origin, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-2 pl-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_quantity, "Số lượng")
                                    @Html.EditorFor(model => model.product_quantity, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.product_quantity, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_price, "Giá trị")
                                    @Html.EditorFor(model => model.product_price, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(model => model.product_price, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_price, "Hình ảnh")
                                    <br />
                                    <img src="@Html.DisplayFor(model => model.product_image)" width="200" />
                                    <br />
                                    @Html.ValidationMessageFor(model => model.product_image, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-danger btn-fill pull-right">Xóa</button>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
