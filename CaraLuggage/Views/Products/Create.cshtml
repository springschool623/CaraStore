                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_price, "Hình ảnh")
                                    <br />
                                    <img src="@Html.DisplayFor(model => model.product_image)" width="200" />
                                    <br />

