                                    @Html.ValidationMessageFor(model => model.product_origin, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-2 pl-1">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.product_quantity, "Số lượng")
