@model IEnumerable<CaraLuggage.Models.TaiKhoan>

@{
    ViewBag.Title = "Quản lý tài khoản (Admin)";
    Layout = "~/Views/Shared/AdminView.cshtml";
}
<style>
    .crud-btn {
        display: inline-block;
        width: 40px;
        height: 40px;
        border-radius: 100%;
        margin: 2px;
    }

        .crud-btn i {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
        }

</style>

@{ 
    int count = 0;
}

<div class="row">
    <div class="col-md-12">
        <div class="card strpied-tabled-with-hover">
            <div class="card-header ">
                <h4 class="card-title">Bảng Quản lý Tài khoản</h4>
                @*<p class="card-category">Here is a subtitle for this table</p>*@
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>
                                @Html.DisplayNameFor(model => model.account_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.account_password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.account_createAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.account_status)
                            </th>
                            <th>Action</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.account_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.account_password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.account_createAt)
                                </td>
                                <td>
                                    @if(item.account_status == true) { 
                                        <span style="color:green">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span style="color:red">Vô hiệu hóa</span>
                                    }
                                </td>
                                <td style="height: 100%; align-items: center;">
                                    <a href="@Url.Action("Edit", new { id=item.account_name })" class="crud-btn btn-info">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id=item.account_name })" class="crud-btn btn-danger">
                                        <i class="fa-solid fa-x">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                <a href="@Url.Action("Create", "Accounts")" class="btn btn-success float-left">Thêm khách hàng mới</a>
            </div>
        </div>
    </div>
</div>
