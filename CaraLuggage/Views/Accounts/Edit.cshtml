@model CaraLuggage.Models.TaiKhoan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminView.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Chỉnh sửa thông tin tài khoản</h4>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.account_name)
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.account_password)
                                    @Html.EditorFor(model => model.account_password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.account_password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.account_status)
                                    @Html.DropDownListFor(model => model.account_status, new List<SelectListItem>
                                           {
                                               new SelectListItem { Text = "Hoạt động", Value = "True" },
                                               new SelectListItem { Text = "Vô hiệu hóa", Value = "False" }
                                           }, "Chọn trạng thái", new { @class = "form-control" })                                    
                                    @Html.ValidationMessageFor(model => model.account_status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info btn-fill pull-right">Lưu</button>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

